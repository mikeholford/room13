
<div class="min-h-screen bg-[#f8f5f0]">

  <!-- Header Section -->
  <section class="py-20 bg-black">
    <div class="max-w-6xl mx-auto px-8 text-center">
      <h1 class="text-5xl md:text-7xl font-light mb-4 font-austin text-white tracking-wider">
        ALL EVENTS
      </h1>
      <p class="text-md md:text-xl text-white/70 max-w-2xl mx-auto font-montserrat font-light tracking-[0.2em]">
        Discover our upcoming gatherings and relive past moments
      </p>
    </div>
  </section>

  <!-- Upcoming Events Section -->
  <section class="py-20 bg-[#f8f5f0]">
    <div class="max-w-6xl mx-auto px-8">

      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-light mb-4 font-austin text-gray-900">
          Upcoming Events
        </h2>
        <p class="text-gray-600 text-xs md:text-sm tracking-[0.2em] uppercase font-montserrat max-w-2xl mx-auto">
          Join us at our next gathering
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 mb-8">

        <!-- Marrakech Event Card -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col">
          <div class="aspect-[4/3] relative overflow-hidden">
            <%= image_tag "events/marrakech.png", class: "w-full h-full object-cover hover:scale-105 transition-transform duration-1000" %>
          </div>
          <div class="px-8 pt-8 pb-12 flex flex-col flex-grow">
            <div class="text-center flex flex-col flex-grow">
              <h3 class="text-3xl font-light mb-2 font-austin text-gray-900 tracking-widest">MARRAKECH</h3>
              <div class="w-16 h-px bg-gray-300 mx-auto mb-4"></div>
              <p class="text-gray-600 text-sm tracking-[0.2em] uppercase font-montserrat mb-2">A Moroccan Escape</p>
              <p class="text-gray-500 text-xs md:text-sm mb-4 max-w-sm mx-auto py-2">
                Immerse yourself in the magic of Marrakech during 1-54 in February. Join us for an enchanting evening in the heart of the Red City, where ancient traditions meet contemporary art and culture.
              </p>
              <div class="mt-auto">
                <a href="#" class="inline-block bg-black text-white px-8 py-3 text-xs tracking-[0.3em] uppercase font-montserrat hover:bg-gray-800 transition-colors duration-300">
                  REGISTER INTEREST
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Milan Event Card -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col">
          <div class="aspect-[4/3] relative overflow-hidden">
            <%= image_tag "events/milan.png", class: "w-full h-full object-cover hover:scale-105 transition-transform duration-1000" %>
          </div>
          <div class="px-8 pt-8 pb-12 flex flex-col flex-grow">
            <div class="text-center flex flex-col flex-grow">
              <h3 class="text-3xl font-light mb-2 font-austin text-gray-900 tracking-widest">MILAN</h3>
              <div class="w-16 h-px bg-gray-300 mx-auto mb-4"></div>
              <p class="text-gray-600 text-sm tracking-[0.2em] uppercase font-montserrat mb-2">Italian Rendezvous</p>
              <p class="text-gray-500 text-xs md:text-sm mb-4 max-w-sm mx-auto py-2">
                Discover Milan's hidden artistic treasures during Miart in April. An exclusive gathering celebrating innovation, craftsmanship, and the intersection of art and design in Italy's fashion capital.
              </p>
              <div class="mt-auto">
                <a href="#" class="inline-block bg-black text-white px-8 py-3 text-xs tracking-[0.3em] uppercase font-montserrat hover:bg-gray-800 transition-colors duration-300">
                  REGISTER INTEREST
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- New York Event Card -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col">
          <div class="aspect-[4/3] relative overflow-hidden">
            <%= image_tag "events/newyork.png", class: "w-full h-full object-cover hover:scale-105 transition-transform duration-1000" %>
          </div>
          <div class="px-8 pt-8 pb-12 flex flex-col flex-grow">
            <div class="text-center flex flex-col flex-grow">
              <h3 class="text-3xl font-light mb-2 font-austin text-gray-900 tracking-widest">NEW YORK</h3>
              <div class="w-16 h-px bg-gray-300 mx-auto mb-4"></div>
              <p class="text-gray-600 text-sm tracking-[0.2em] uppercase font-montserrat mb-2">Connect & Create</p>
              <p class="text-gray-500 text-xs md:text-sm mb-4 max-w-sm mx-auto py-2">
                Be part of an unforgettable evening in New York in May. Meet and connect with fellow members for a night of art, conversation, and new friendships.
              </p>
              <div class="mt-auto">
                <a href="#" class="inline-block bg-black text-white px-8 py-3 text-xs tracking-[0.3em] uppercase font-montserrat hover:bg-gray-800 transition-colors duration-300">
                  REGISTER INTEREST
                </a>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Previous Events Section -->
  <section class="py-20 bg-[#f8f5f0]">
    <div class="max-w-6xl mx-auto px-8">

      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-light mb-4 font-austin text-gray-900">
          Past Events
        </h2>
        <p class="text-gray-600 text-xs md:text-sm tracking-[0.2em] uppercase font-montserrat max-w-2xl mx-auto">
          Connect with those you shared a moment with
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">

        <!-- Miami Event Card -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col">
