<!-- Apply Modal -->
<div data-apply-modal-target="modal" 
     class="fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50 opacity-0 pointer-events-none transition-opacity duration-300">
  <div data-apply-modal-target="content" 
       class="bg-white p-8 max-w-md w-full mx-4 shadow-2xl transform scale-95 transition-transform duration-300">
    <div class="flex justify-between items-start mb-6">
      <div>
        <h3 class="text-2xl font-austin tracking-[0.1em] text-gray-900">
          Begin Your Application
        </h3>
        <p class="text-gray-500 text-xs tracking-[0.1em] uppercase font-montserrat mt-1" data-apply-modal-target="membershipLabel">
          <%= local_assigns[:default_membership] == 'founding' ? 'Founding Membership' : 'Standard Membership' %>
        </p>
      </div>
      <button type="button" data-action="click->apply-modal#close" class="text-gray-400 hover:text-gray-600 transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <form data-apply-modal-target="form" data-action="submit->apply-modal#submit">
      <input type="hidden" name="membership_type" data-apply-modal-target="membershipType" value="<%= local_assigns[:default_membership] || 'standard' %>">
      
      <div class="grid grid-cols-2 gap-4 mb-4">
        <div>
          <label class="block text-sm tracking-[0.1em] uppercase font-montserrat text-gray-700 mb-2">
            First Name
          </label>
          <input type="text" 
                 name="first_name" 
                 required
                 data-apply-modal-target="firstName"
                 class="w-full px-4 py-3 border border-gray-300 focus:border-gray-900 focus:ring-1 focus:ring-gray-900 outline-none transition-colors font-montserrat"
                 placeholder="John">
        </div>
        <div>
          <label class="block text-sm tracking-[0.1em] uppercase font-montserrat text-gray-700 mb-2">
            Last Name
          </label>
          <input type="text" 
                 name="last_name" 
                 required
                 data-apply-modal-target="lastName"
                 class="w-full px-4 py-3 border border-gray-300 focus:border-gray-900 focus:ring-1 focus:ring-gray-900 outline-none transition-colors font-montserrat"
                 placeholder="Doe">
        </div>
      </div>

      <div class="mb-6">
        <label class="block text-sm tracking-[0.1em] uppercase font-montserrat text-gray-700 mb-2">
          Email
        </label>
        <input type="email" 
               name="email" 
               required
               data-apply-modal-target="email"
               class="w-full px-4 py-3 border border-gray-300 focus:border-gray-900 focus:ring-1 focus:ring-gray-900 outline-none transition-colors font-montserrat"
               placeholder="john@example.com">
      </div>

      <button type="submit" 
              class="w-full px-8 py-4 bg-gray-900 text-white tracking-[0.2em] uppercase font-montserrat text-xs hover:bg-gray-800 transition-colors duration-300 cursor-pointer">
        Continue to Application
      </button>
    </form>
  </div>
</div>

