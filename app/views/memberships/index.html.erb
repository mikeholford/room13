<section class="py-20 bg-[#f8f5f0]" data-controller="apply-modal">
  <div class="max-w-6xl mx-auto px-8">
    
    <a href="/">
      <span class="inline-flex items-center text-gray-700 hover:text-gray-900 font-montserrat text-sm uppercase">
        <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
        </svg>
        Back
      </span>
    </a>

    <div class="text-center mb-16 mt-8">
      <h2 class="text-4xl md:text-5xl tracking-[0.1em] font-light mb-4 font-austin text-gray-900">
        MEMBERSHIP
      </h2>
      <p class="text-gray-600 text-sm tracking-[0.2em] uppercase font-montserrat max-w-2xl mx-auto">
        Join the global art world members club
      </p>
    </div>

    <div class="mb-4">
      <p class="text-gray-600 text-lg tracking-[0.2em] font-montserrat mb-16 text-center">
        Membership offers exclusive access to curated events, meaningful connections, and a community of art lovers, collectors, and cultural enthusiasts across the globe.
      </p>

      <!-- Community Membership Section -->
      <div class="mb-16">
        <h3 class="text-3xl font-austin tracking-[0.1em] text-gray-900 mb-2">
          Community Member
        </h3>
        <p class="text-gray-500 text-xs tracking-[0.15em] uppercase font-montserrat mb-4">
          Join our global community of art enthusiasts · Free
        </p>

        <!-- Two-column: Bullets left, Image right -->
        <div class="flex flex-col md:flex-row md:items-start gap-8 mb-8 mt-8">
          <div class="md:w-3/5">

            <p class="text-gray-600 text-lg tracking-[0.1em] font-montserrat mb-8">
              Begin your journey with ROOM 13. As a Community Member, you join a global network of like-minded art enthusiasts and receive first notice of our curated events worldwide.
            </p>
            <p class="text-gray-600 text-lg tracking-[0.1em] font-montserrat mb-8">
              Our Community Membership comes with the following benefits
            </p>
            <ul class="space-y-4">
              <li class="flex items-start">
                <svg class="w-5 h-5 text-gray-700 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-gray-700 font-montserrat text-md tracking-[0.1em]">A global network of like-minded individuals</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-gray-700 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-gray-700 font-montserrat text-md tracking-[0.1em]">Digital membership pass</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-gray-700 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-gray-700 font-montserrat text-md tracking-[0.1em]">First notice of new events</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-gray-700 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-gray-700 font-montserrat text-md tracking-[0.1em]">Priority on event invitations</span>
              </li>
            </ul>
            <div class="flex flex-wrap gap-4 justify-center md:justify-start mt-12">
              <%= link_to membership_community_path, class: "inline-block px-8 py-3 border-2 border-gray-900 text-gray-900 tracking-[0.2em] uppercase font-montserrat text-xs hover:bg-gray-900 hover:text-white transition-colors duration-300" do %>
                Learn More
              <% end %>
              <button type="button"
                      data-action="click->apply-modal#open"
                      data-apply-modal-type-param="community"
                      class="inline-block px-8 py-3 bg-gray-900 text-white tracking-[0.2em] uppercase font-montserrat text-xs hover:bg-gray-800 transition-colors duration-300 cursor-pointer">
                Join Now
              </button>
            </div>
          </div>
          <div class="md:w-2/5 flex justify-center md:justify-end">
            <div class="w-full aspect-square overflow-hidden border-5 border-white shadow-xl">
              <%= image_tag "landing/17.jpg", alt: "Room 13 community", class: "w-full h-full object-cover" %>
            </div>
          </div>
        </div>
      </div>

      <hr class="border-gray-300 mb-16">

      <!-- Premium Membership Section -->
      <div class="mb-16">
        <h3 class="text-3xl font-austin tracking-[0.1em] text-gray-900 mb-2">
          Premium Member
        </h3>
        <p class="text-gray-500 text-xs tracking-[0.15em] uppercase font-montserrat mb-4">
          Guaranteed access to the global art world
        </p>


        <!-- Two-column: Bullets left, Image right -->
        <div class="flex flex-col md:flex-row md:items-start gap-8 mb-8 mt-8">
          <div class="md:w-3/5">

            <p class="text-gray-600 text-lg tracking-[0.1em] font-montserrat mb-8">
              Experience the art world like never before. As a Premium Member, you gain guaranteed access to ROOM 13's carefully curated events and become part of a global network of passionate art enthusiasts.
            </p>
            <p class="text-gray-600 text-lg tracking-[0.1em] font-montserrat mb-8">
              Our Premium Membership comes with the following benefits
            </p>
