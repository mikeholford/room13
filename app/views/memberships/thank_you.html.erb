<section class="py-20 bg-[#f8f5f0] min-h-screen flex items-center">
  <div class="max-w-4xl mx-auto px-8 w-full">
    
    <div class="text-center">
   

      <h2 class="text-4xl md:text-5xl tracking-[0.1em] font-light mb-4 font-austin text-gray-900">
        THANK YOU
      </h2>
      
      <p class="text-gray-600 text-sm tracking-[0.2em] uppercase font-montserrat mb-8">
        Your application has been received
      </p>

      <div class="max-w-2xl mx-auto mb-12">
        <p class="text-gray-600 text-lg tracking-[0.15em] font-montserrat mb-6">
          We appreciate your interest in joining ROOM 13. Our team will review your application and be in touch shortly.
        </p>

        <p class="text-gray-600 text-lg tracking-[0.15em] font-montserrat mb-6">
          Your membership status is currently <span class="font-bold">pending</span>. Once approved, you will receive further instructions to complete your membership.
        </p>

      </div>

      <div class="space-y-4">
        <%= link_to membership_path, class: "inline-block px-12 py-4 bg-gray-900 text-white tracking-[0.2em] uppercase font-montserrat text-sm hover:bg-gray-800 transition-colors duration-300" do %>
          Back to Membership
        <% end %>
        
        <div>
          <%= link_to root_path, class: "inline-block text-gray-600 hover:text-gray-900 tracking-[0.15em] uppercase font-montserrat text-sm transition-colors duration-300" do %>
            Return to Home
          <% end %>
        </div>
      </div>

      <p class="text-gray-500 text-sm tracking-[0.15em] font-montserrat mt-12">
        Questions? <a href="mailto:irene@room13.art" class="text-gray-600 hover:text-gray-900 transition-colors duration-300 underline">Contact Irene</a>
      </p>
    </div>

  </div>
</section>
